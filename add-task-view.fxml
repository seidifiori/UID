<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #475c6c;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.uididididii.AddTaskController">

    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="taskContainer" alignment="TOP_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                    <Label fx:id="emptyLabel" style="-fx-text-fill: gray;" text="Nessun task in programma. Clicca Aggiungi per iniziare!" />
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10" left="15" right="15" top="10" />
            </padding>
            <Button fx:id="addButton" onAction="#handleAddButton" style="-fx-font-weight: bold; -fx-background-color: #add8e6;" text="Aggiungi Task" />
        </HBox>
    </bottom>

</BorderPane>
